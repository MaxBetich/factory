@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a Certified Machine</h2>

<h4>Add a machine to this engineer's list of certifications: @Html.DisplayFor(model => model.EngineerName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" />
}
<div class="box">
  <p>@Html.ActionLink("Back to Details", "Details", new {id = Model.EngineerId})</p>
  <p>@Html.ActionLink("Back To List", "Index")</p>
</div>