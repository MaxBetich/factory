@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;


<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 
else
{
  <ul>
    @foreach(Machine machine in Model)
    {
      <div class="item">
        <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
      </div>
    }
  </ul>
}
<div class="box">
  <p>@Html.ActionLink("Add New Machine", "Create")</p>
  <p>@Html.ActionLink("Add New Engineer", "Create", "Engineers")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>