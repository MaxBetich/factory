@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add an Engineer</h2>

<h4>Add a certified engineer for this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}
<div class="box">
  <p>@Html.ActionLink("Back to Details", "Details", new {id = Model.MachineId})</p>
  <p>@Html.ActionLink("Back To List", "Index")</p>
</div>